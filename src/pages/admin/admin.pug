extends ../../templates/main.pug

block var

    - var title = 'Админка'
    - var page = 'admin'

block content
    main.admin.clearfix
        form.admin__form-add.form-product(action="http://localhost:3007/api/products/addproduct" method='post' name='addProduct' enctype='multipart/form-data')
            h1.form-product__title Добавление товара
            input.form-product__name(type='text' name='name' placeholder='название')
            input.form-product__price(type='text' name='price' placeholder='цена')
            input.form-product__image(type='file' name='image' id='imageProduct')
            input.form-product__submit(type='submit')
            input.form-product__reset(type='reset')
        form.admin__form-delete-product.form-delete-product(action="http://localhost:3007/api/products/deleteproduct" method='get' name='deleteProduct')
            h1.form-delete-product__title Удаление товара
            input.form-delete-product__id(type='text' name='id' placeholder='id')
            input.form-delete-product__submit(type='submit' placeholder='')
            input.form-delete-product__reset(type='reset')
        form.admin__form-update-product.form-update-product(action="http://localhost:3007/api/products/updateproduct" method='post' name='updateProduct' enctype='multipart/form-data')
            h1.form-update-product__title Изменение товара
            input.form-update-product__id(type='text' name='id' placeholder='введите id товара' required)
            input.form-update-product__name(type='text' name='name' placeholder='название')
            input.form-update-product__price(type='text' name='price' placeholder='цена')
            input.add-pic__image(type='file' id='pic-product' name='image')
            .form-update-product__add-pic.add-pic
                label.add-pic__label(for="pic-product")
                span.add-pic__span
            input.form-update-product__submit(type='submit')
            input.form-update-product__reset(type='reset')